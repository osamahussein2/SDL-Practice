<?xml version="1.0" ?>
<States>
    <MENU>
        <TEXTURES>
            <texture filename="Buttons/Play button sheet.png" ID="playbutton"/>
            <texture filename="Buttons/Exit button sheet.png" ID="exitbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="MenuButton" x="225" y="100" width="167" height="100" textureID="playbutton" numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="225" y="300" width="167" height="100" textureID="exitbutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </MENU>
    
    <PLAY>
        <TEXTURES>
            <texture filename="Sprites/Helicopter.png" ID="helicopter"/>
            <texture filename="Sprites/Helicopter2.png" ID="helicopter2"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="Player" x="500" y="100" width="128" height="55" textureID="helicopter" numFrames="4"/>
            <object type="Enemy" x="100" y="100" width="128" height="55" textureID="helicopter2" numFrames="4"/>
        </OBJECTS>
    </PLAY>
    
    <PAUSE>
        <TEXTURES>
            <texture filename="Buttons/Resume button sheet.png" ID="resumebutton"/>
            <texture filename="Buttons/Main Menu button sheet.png" ID="mainbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="MenuButton" x="100" y="100" width="153" height="80" textureID="mainbutton" numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="100" y="300" width="152" height="80" textureID="resumebutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </PAUSE>

    
    <GAMEOVER>
        <TEXTURES>
            <texture filename="Animated Text/Game Over text sheet.png" ID="gameovertext"/>
            <texture filename="Buttons/Main Menu button sheet.png" ID="mainbutton"/>
            <texture filename="Buttons/Restart button sheet.png" ID="restartbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="AnimatedGraphic" x="200" y="100" width="225" height="30" textureID="gameovertext" numFrames="2" animSpeed="2"/>
            <object type="MenuButton" x="200" y="200" width="153" height="80" textureID="mainbutton" numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="200" y="300" width="160" height="80" textureID="restartbutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </GAMEOVER>
</States>
